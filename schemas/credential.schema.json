{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://biopassport.org/schemas/credential.json",
  "title": "Credential",
  "description": "Credential record anchored on-chain",
  "type": "object",
  "required": ["materialId", "credentialId", "credentialType", "commitmentHash", "issuerId", "issuedAt", "validUntil", "signatureRef"],
  "properties": {
    "materialId": {
      "type": "string",
      "pattern": "^bio:(cell_line|plasmid|tissue|organism):[a-f0-9-]{36}$",
      "description": "Reference to parent material"
    },
    "credentialId": {
      "type": "string",
      "pattern": "^cred:[a-f0-9-]{36}$",
      "description": "Unique credential identifier"
    },
    "credentialType": {
      "type": "string",
      "enum": ["IDENTITY", "QC_MYCO", "QC_STR", "TRANSFER", "USAGE_RIGHTS", "PASSAGE"],
      "description": "Type of credential"
    },
    "commitmentHash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of canonical credential JSON"
    },
    "issuerId": {
      "type": "string",
      "minLength": 1,
      "description": "Organization ID of credential issuer"
    },
    "issuedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of issuance"
    },
    "validUntil": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of expiration"
    },
    "artifactRefs": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ArtifactRef"
      },
      "description": "References to off-chain artifacts"
    },
    "signatureRef": {
      "type": "string",
      "description": "Base64-encoded issuer signature"
    },
    "revoked": {
      "type": "boolean",
      "default": false,
      "description": "Whether credential has been revoked"
    },
    "revokedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of revocation"
    },
    "revokedReason": {
      "type": "string",
      "description": "Reason for revocation"
    }
  },
  "definitions": {
    "ArtifactRef": {
      "type": "object",
      "required": ["cid", "hash"],
      "properties": {
        "cid": {
          "type": "string",
          "description": "Content identifier (IPFS CID or S3 URL)"
        },
        "hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 hash of file bytes"
        },
        "filename": {
          "type": "string",
          "description": "Original filename"
        },
        "contentType": {
          "type": "string",
          "description": "MIME type of artifact"
        }
      }
    }
  }
}
