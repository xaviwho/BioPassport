{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://biopassport.org/schemas/credential-types/usage-rights.json",
  "title": "Usage Rights Credential",
  "description": "Material Transfer Agreement and usage restrictions (off-chain payload)",
  "type": "object",
  "required": ["credentialType", "materialId", "grantedTo", "grantedBy", "effectiveDate", "permissions"],
  "properties": {
    "credentialType": {
      "const": "USAGE_RIGHTS"
    },
    "materialId": {
      "type": "string",
      "description": "Reference to material"
    },
    "grantedTo": {
      "type": "string",
      "description": "Organization receiving rights"
    },
    "grantedBy": {
      "type": "string",
      "description": "Organization granting rights"
    },
    "effectiveDate": {
      "type": "string",
      "format": "date-time",
      "description": "When rights become effective"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time",
      "description": "When rights expire (if applicable)"
    },
    "permissions": {
      "type": "object",
      "properties": {
        "research": {
          "type": "boolean",
          "description": "Allowed for research use"
        },
        "commercial": {
          "type": "boolean",
          "description": "Allowed for commercial use"
        },
        "distribution": {
          "type": "boolean",
          "description": "Allowed to distribute to third parties"
        },
        "modification": {
          "type": "boolean",
          "description": "Allowed to modify/derive"
        },
        "publication": {
          "type": "boolean",
          "description": "Allowed to publish results"
        }
      },
      "required": ["research", "commercial", "distribution"]
    },
    "restrictions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of specific restrictions"
    },
    "mtaDocumentHash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of MTA document"
    },
    "mtaReference": {
      "type": "string",
      "description": "MTA document reference number"
    },
    "contactPerson": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "organization": { "type": "string" }
      }
    },
    "notes": {
      "type": "string"
    }
  }
}
