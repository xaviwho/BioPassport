{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://biopassport.org/schemas/material.json",
  "title": "Material",
  "description": "Biomaterial registration record",
  "type": "object",
  "required": ["materialId", "materialType", "metadataHash", "ownerOrg", "status", "createdAt"],
  "properties": {
    "materialId": {
      "type": "string",
      "pattern": "^bio:(cell_line|plasmid|tissue|organism):[a-f0-9-]{36}$",
      "description": "Unique material identifier"
    },
    "materialType": {
      "type": "string",
      "enum": ["CELL_LINE", "PLASMID", "TISSUE", "ORGANISM"],
      "description": "Type of biomaterial"
    },
    "metadataHash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of off-chain metadata JSON"
    },
    "ownerOrg": {
      "type": "string",
      "minLength": 1,
      "description": "Organization ID of current owner"
    },
    "status": {
      "type": "string",
      "enum": ["ACTIVE", "QUARANTINED", "REVOKED", "EXPIRED"],
      "description": "Current material status"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of registration"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    }
  }
}
