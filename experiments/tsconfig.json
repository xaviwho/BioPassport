{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "..",
    "paths": {
      "../issuer-service/*": ["issuer-service/*"],
      "../verifier-cli/*": ["verifier-cli/*"]
    }
  },
  "include": ["./**/*.ts", "../issuer-service/src/**/*.ts", "../verifier-cli/src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
